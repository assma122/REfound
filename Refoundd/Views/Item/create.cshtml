@model Refoundd.Models.Item
<h2>Add Lost / Found Items</h2>
<form asp-action="Create" method="post">
    <div>
        <label>Item Name:</label>
        <input asp-for="Item_Name" />
        <span asp-validation-for="Item_Name" style="color:red;"></span>
    </div>
    <div>
        <label>Description:</label>
        <<textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description" style="color:red;"></span>
    </div>
    <div>
        <label>Location:</label>
        <<textarea asp-for="Location"></textarea>
        <span asp-validation-for="Location" style="color:red;"></span>
    </div>
    <div>
        <label>Status:</label>
        <select asp-for="Status">
            <option value="Lost">Lost</option>
            <option value="Found">Found</option>
        </select>
        <span asp-validation-for="Status" style="color:red;"></span>
    </div>
    <div>
        <input asp-for="User_Id" type="hidden" value="1" />
    </div>
    <button type="submit">Add Item</button>
</form>
<a asp-action="Index">Back to List</a>
