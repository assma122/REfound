@model List<Refoundd.Models.Item>

<h2>Lost & Found Items</h2>

<!-- Search form -->
<form asp-action="Index" method="get">
    <input type="text" name="search" placeholder="Search by item name..." />
    <button type="submit">Search</button>
</form>

<a asp-action="Create" class="btn btn-primary">Add New Item</a>//جديدة

<table class="table table-bordered table-striped" style="margin-top:10px;">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Description</th>
            <th>Location</th>
            <th>Status</th>
            <th>Date</th>
            <th>Actions</th> // جديدة
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Item_Name</td>
                <td>@i.Description</td>
                <td>@i.Location</td>
                <td>@i.Status</td>
                <td>@i.Date.ToShortDateString()</td>
                <td>
                    // هاي جديدة
                    <a asp-action="Delete" asp-route-id="@i.Item_Id" onclick="return confirm('Are You Sure?')">Delete</a>
                </td>// لحد هون
            </tr>
        }
    </tbody>
</table>
