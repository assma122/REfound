@model Refoundd.Models.Item
@{
    ViewData["Title"] = "Delete Item - ReFound";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Lexend', sans-serif;
            background: linear-gradient(135deg, #0a0a0c 0%, #16213e 100%);
            color: #f1f5f9;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 24px;
        }

        .delete-card {
            max-width: 500px;
            width: 100%;
            background-color: #1a1d23;
            border: 1px solid #2d323a;
            border-radius: 16px;
            padding: 40px;
            text-align: center;
        }

        .warning-icon {
            width: 80px;
            height: 80px;
            margin: 0 auto 24px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(239, 68, 68, 0.1);
            border-radius: 50%;
            color: #ef4444;
        }

            .warning-icon .material-symbols-outlined {
                font-size: 48px;
            }

        .delete-title {
            font-size: 28px;
            font-weight: 700;
            color: white;
            margin-bottom: 12px;
        }

        .delete-message {
            color: #94a3b8;
            font-size: 16px;
            margin-bottom: 32px;
            line-height: 1.6;
        }

        .item-details {
            background: rgba(51, 65, 85, 0.3);
            border: 1px solid #334155;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 32px;
            text-align: left;
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #334155;
        }

            .detail-row:last-child {
                border-bottom: none;
            }

        .detail-label {
            color: #94a3b8;
            font-size: 14px;
            font-weight: 600;
        }

        .detail-value {
            color: white;
            font-size: 14px;
        }

        .status-badge {
            padding: 4px 12px;
            border-radius: 6px;
            font-size: 12px;
            font-weight: 700;
            text-transform: uppercase;
        }

            .status-badge.lost {
                background-color: rgba(255, 140, 0, 0.2);
                border: 1px solid #ff8c00;
                color: #ff8c00;
            }

            .status-badge.found {
                background-color: rgba(6, 182, 212, 0.2);
                border: 1px solid #06b6d4;
                color: #06b6d4;
            }

        .form-actions {
            display: flex;
            gap: 12px;
        }

        .btn {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            padding: 14px 24px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 15px;
            cursor: pointer;
            transition: all 0.3s;
            border: none;
            text-decoration: none;
        }

        .btn-danger {
            background-color: #ef4444;
            color: white;
            box-shadow: 0 8px 16px rgba(239, 68, 68, 0.2);
        }

            .btn-danger:hover {
                background-color: #dc2626;
                transform: translateY(-2px);
            }

        .btn-secondary {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.2);
        }

            .btn-secondary:hover {
                background-color: rgba(255, 255, 255, 0.15);
            }

        /*media (max-width: 768px) {
            .delete-card

        {
            padding: 24px;
        }

        .delete-title {
            font-size: 24px;
        }

        .form-actions {
            flex-direction: column-reverse;
        }

        }*/
    </style>
</head>
<body>
    <div class="delete-card">
        <div class="warning-icon">
            <span class="material-symbols-outlined">warning</span>
        </div>

        <h2 class="delete-title">Delete Item?</h2>
        <p class="delete-message">
            Are you sure you want to delete this item? This action cannot be undone.
        </p>

        <div class="item-details">
            <div class="detail-row">
                <span class="detail-label">Item Name:</span>
                <span class="detail-value">@Model.Item_Name</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Status:</span>
                <span class="status-badge @Model.Status.ToLower()">@Model.Status</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Location:</span>
                <span class="detail-value">@Model.Location</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Date:</span>
                <span class="detail-value">@Model.Date.ToString("MMM dd, yyyy")</span>
            </div>
        </div>

        <form asp-action="DeleteConfirmed" method="post" class="form-actions">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Item_Id" />

            <a href="@Url.Action("Dashboard", "Student")" class="btn btn-secondary">
                <span class="material-symbols-outlined">close</span>
                Cancel
            </a>

            <button type="submit" class="btn btn-danger">
                <span class="material-symbols-outlined">delete</span>
                Delete Item
            </button>
        </form>
    </div>
</body>
</html>