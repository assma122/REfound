@{
    ViewData["Title"] = "ReFound - Campus Lost & Found";
    Layout = "_Layout";
}

<div class="hero-section">
    <h1 class="hero-title">ReFound</h1>
    <p class="hero-subtitle">
        The centralized hub for campus lost and found. Fast, secure, and university-affiliated.
    </p>

    <div class="action-buttons">
        <a href="@Url.Action("ReportLost", "Item")" class="btn-primary-custom">
            <i class="bi bi-arrow-repeat"></i>
            Report Lost Item
        </a>
        <a href="@Url.Action("ReportFound", "Item")" class="btn-secondary-custom">
            <i class="bi bi-inbox"></i>
            Report Found Item
        </a>
    </div>

    <div class="search-container">
        <form asp-controller="Item" asp-action="Search" method="get" class="search-form">
            <i class="bi bi-search search-icon"></i>
            <input type="text" name="query" class="search-input"
                   placeholder="Quick search for your missing items..."
                   required />
            <button type="submit" class="search-btn">
                <i class="bi bi-arrow-right"></i>
            </button>
        </form>
    </div>
</div>