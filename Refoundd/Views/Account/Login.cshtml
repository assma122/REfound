@model Refoundd.Models.LoginViewModel
@{
    ViewData["Title"] = "ReFound - Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header class="header">
        <h2 class="logo-text">ReFound</h2>

        <nav class="nav">
            <a href="@Url.Action("Index", "Home")" class="nav-link">Home</a>
            <a href="#" class="nav-link">About</a>
            <a href="#" class="nav-link">Help</a>
        </nav>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Background Gradients -->
        <div class="gradient-top"></div>
        <div class="gradient-bottom"></div>

        <!-- Login Card -->
        <div class="login-card">
            <div class="login-header">
                <h1 class="login-title">Welcome Back</h1>
                <p class="login-subtitle">Please sign in to your student account</p>
            </div>

            <form asp-controller="Account" asp-action="Login" method="post" class="form">
                @Html.AntiForgeryToken()

                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                <!-- Email Input -->
                <div class="form-group">
                    <label asp-for="Email" class="form-label">University Email</label>
                    <div class="input-wrapper">
                        <span class="material-symbols-outlined input-icon">mail</span>
                        <input asp-for="Email" type="email" class="form-input" placeholder="name@university.edu" />
                    </div>
                    <span asp-validation-for="Email" class="validation-error"></span>
                </div>

                <!-- Password Input -->
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <div class="input-wrapper">
                        <span class="material-symbols-outlined input-icon">lock</span>
                        <input asp-for="Password" type="password" class="form-input" placeholder="••••••••" />
                    </div>
                    <span asp-validation-for="Password" class="validation-error"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn-primary">Sign In</button>
            </form>

            <!-- Footer -->
            <p class="footer-text">
                New to the platform?
                <a href="@Url.Action("Register", "Account")" class="footer-link">Create an account</a>
            </p>
        </div>
    </main>

    <!-- Page Footer -->
    <footer class="page-footer">
        <p class="page-footer-text">© 2026 ReFound. Centralized University Lost & Found.</p>
    </footer>

    <!-- Validation Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>