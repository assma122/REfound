@model Refoundd.Models.User
@{
    ViewData["Title"] = "ReFound - Dashboard";
    Layout = null;
    var items = ViewBag.Items as List<Refoundd.Models.Item> ?? new List<Refoundd.Models.Item>();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="header-container">
            <div class="header-left">
                <a href="@Url.Action("Index", "Home")" class="logo">
                    <div class="logo-icon">
                        <span class="material-symbols-outlined">search</span>
                    </div>
                    <h1 class="logo-text">ReFound</h1>
                </a>
                <nav class="nav">
                    <a href="@Url.Action("Dashboard", "Student")" class="nav-link active">Dashboard</a>
                    <a href="#" class="nav-link">Campus Map</a>
                    <a href="#" class="nav-link">Messages</a>
                </nav>
            </div>
            <div class="header-right">
                <div class="search-box">
                    <span class="material-symbols-outlined search-icon">search</span>
                    <input type="text" class="search-input" placeholder="Search items...">
                </div>
                <div class="user-menu">
                    <div class="user-avatar">
                        <a href=@Url.Action("Profile", "Student" )><span class="user-initial">@Model.User_Name.Substring(0, 1).ToUpper()</span></a>
                    </div>
                    <a href="@Url.Action("Logout", "Account")" class="logout-link" title="Logout">
                        <span class="material-symbols-outlined">logout</span>
                    </a>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Page Header -->
        <div class="page-header">
            <div class="page-title-section">
                <h2 class="page-title">Items Dashboard</h2>
                <p class="page-subtitle">Discover and reclaim lost belongings across campus.</p>
            </div>
            <button class="btn-add" onclick="window.location.href='@Url.Action("Create", "Item")'">
                <span class="material-symbols-outlined">add_circle</span>
                <span>Add New Item</span>
            </button>
        </div> 

        <!-- Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <span class="material-symbols-outlined">check_circle</span>
                @TempData["SuccessMessage"]
            </div>
        } 

        <!-- Filter Bar -->
        <div class="filter-bar">
            <div class="filter-tabs">
                <button class="filter-tab active" data-filter="all">All Items</button>
                <button class="filter-tab" data-filter="Lost">Lost Items</button>
                <button class="filter-tab" data-filter="Found">Found Items</button>
            </div>
            <div class="sort-info">
                <span class="material-symbols-outlined">filter_list</span>
                <span>Sort by: <span class="sort-value">Recent</span></span>
            </div>
        </div>

        <!-- Items Grid -->
        <div class="items-grid" id="itemsGrid">
            @if (items.Count == 0)
            {
                <div class="empty-state">
                    <span class="material-symbols-outlined empty-icon">search_off</span>
                    <h3>No items found</h3>
                    <p>Be the first to report a lost or found item!</p>
                    <button class="btn-add" onclick="window.location.href='@Url.Action("Create", "Item")'">
                        <span class="material-symbols-outlined">add_circle</span>
                        <span>Add New Item</span>
                    </button>
                </div>
            }
            else
            {
                @foreach (var item in items)
                {
                    <div class="item-card" data-status="@item.Status">
                        <div class="item-image">
                            <div class="item-image-placeholder">
                                <span class="material-symbols-outlined">image</span>
                            </div>
                            <span class="status-badge @item.Status.ToLower()">@item.Status</span>
                        </div>
                        <div class="item-content">
                            <h3 class="item-title">@item.Item_Name</h3>
                            <p class="item-description">@item.Description</p>
                            <div class="item-meta">
                                <div class="meta-item">
                                    <span class="material-symbols-outlined">location_on</span>
                                    <span>@item.Location</span>
                                </div>
                                <div class="meta-item">
                                    <span class="material-symbols-outlined">calendar_today</span>
                                    <span>@item.Date.ToString("MMM dd, yyyy")</span>
                                </div>
                            </div>
                            @if (item.User_Id == Context.Session.GetInt32("UserId"))
                            {
                                <div class="item-actions">
                                    <a href="@Url.Action("Delete", "Item", new { id = item.Item_Id })" class="btn-action btn-delete">
                                        <span class="material-symbols-outlined">delete</span>
                                    </a>
                                </div>
                            }
                        </div> 
                    </div>
                }
            }
        </div>

        <!-- Pagination (سيظهر عند وجود عناصر كثيرة) -->
        @if (items.Count > 8)
        {
            <div class="pagination">
                <button class="page-btn">
                    <span class="material-symbols-outlined">chevron_left</span>
                </button>
                <button class="page-btn active">1</button>
                <button class="page-btn">2</button>
                <button class="page-btn">3</button>
                <span class="page-dots">...</span>
                <button class="page-btn">@((items.Count / 8) + 1)</button>
                <button class="page-btn">
                    <span class="material-symbols-outlined">chevron_right</span>
                </button>
            </div>
        }
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <p class="footer-text">© 2026 ReFound – The University Lost & Found Hub.</p>
            <div class="footer-links">
                <a href="#" class="footer-link">Privacy Policy</a>
                <a href="#" class="footer-link">Terms of Service</a>
                <a href="@Url.Action("Index", "Home")" class="footer-link">Contact Support</a>
            </div>
        </div>
    </footer>

    <script src="~/js/dashboard.js" asp-append-version="true"></script>
</body>
</html>